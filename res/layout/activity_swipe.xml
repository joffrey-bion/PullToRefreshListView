<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwipeActivity" >

    <com.jbion.android.lib.list.swipe.SwipeListView
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/android:list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        swipe:swipeBackView="@+id/swipe_back_view"
        swipe:swipeFrontView="@+id/swipe_front_view"
        swipe:swipeMode="left"
        swipe:swipeOffsetLeft="100dp"
        swipe:swipeOffsetRight="50dp" />

</RelativeLayout>